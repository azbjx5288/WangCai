<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout android:id="@+id/now_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="当前密码："/>

            <EditText
                android:id="@+id/now_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:hint=""
                android:inputType="textPassword"
                android:textColorHint="@color/text_middle"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/divideLine"
            android:layout_height="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="输入新密码："/>

            <EditText
                android:id="@+id/new_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:textColorHint="@color/text_middle"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/divideLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="确认新密码："/>

            <EditText
                android:id="@+id/new_password_verify"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:textColorHint="@color/text_middle"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="密码应由6-20位数字和字母组成，且必须同时包含数字和字母，且不可与登录密码相同"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textColor="#f00"
            android:text="一旦修改资金密码，2小时内不能提现"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/app_main_dark">

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button_login"
            android:textColor="@android:color/white"
            android:text="提交" />
    </LinearLayout>
</RelativeLayout>