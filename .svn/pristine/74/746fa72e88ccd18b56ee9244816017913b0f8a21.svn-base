<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:gravity="left"
                android:textColor="#BF0000"
                android:lineSpacingExtra="2dp"
                android:textSize="16sp"
                android:text="特别提示：调整用户奖金组，一旦调高并保存后，不允许恢复或调低，请谨慎操作！"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="用户名："/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="奖金组："/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="数字彩："/>

                <EditText
                    android:id="@+id/bonus_counts"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/shape_rounded_bg2"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="#666666"
                    android:textColorHint="#666666"
                    android:textSize="14sp"
                />
                <TextView
                    android:id="@+id/bonus_rebate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"
                    android:text="对应返点0.00%"/>

            </LinearLayout>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginStart="60dp"-->
                <!--android:text="最高可设置1960"/>-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="游戏返点："/>
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="竞彩足球："-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="16sp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:gravity="right"
                    android:text="竞彩单关："/>

                <EditText
                    android:id="@+id/bonus_danguan"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_rounded_bg2"
                    android:gravity="center_vertical"
                    android:hint="0"
                    android:inputType="number|numberDecimal"
                    android:paddingLeft="5dp"
                    android:text="0.0"
                    android:textColor="#666666"
                    android:textColorHint="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bonus_danguan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:gravity="right"
                    android:text="混合过关："/>

                <EditText
                    android:id="@+id/bonus_hunhe"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_rounded_bg2"
                    android:gravity="center_vertical"
                    android:hint="0"
                    android:inputType="number|numberDecimal"
                    android:paddingLeft="5dp"
                    android:text="0.0"
                    android:textColor="#666666"
                    android:textColorHint="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bonus_hunhe_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:gravity="right"
                    android:text="AG 游 戏 ："/>

                <EditText
                    android:id="@+id/bonus_ag"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_rounded_bg2"
                    android:gravity="center_vertical"
                    android:hint="0.0"
                    android:inputType="number|numberDecimal"
                    android:paddingLeft="5dp"
                    android:text="0.0"
                    android:textColor="#666666"
                    android:textColorHint="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bonus_ag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:gravity="right"
                    android:text="GA 游 戏 ："/>

                <EditText
                    android:id="@+id/bonus_game"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_rounded_bg2"
                    android:gravity="center"
                    android:hint="0.0"
                    android:inputType="number|numberDecimal"
                    android:paddingLeft="5dp"
                    android:text="0.0"
                    android:textColor="#666666"
                    android:textColorHint="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bonus_game_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:padding="5dp">

            <Button
                android:id="@+id/rebates_setting_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_type"
                android:text="确定"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>