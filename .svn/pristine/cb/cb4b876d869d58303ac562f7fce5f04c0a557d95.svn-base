<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/game_method_info_padding"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="三星直选复选、单式、和值"
                android:textColor="@color/app_font_dark_color"
                android:textSize="14sp"
                android:typeface="serif" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/game_method_info_padding"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/dantiao_3d_item1"
                android:textColor="@color/app_font_dark_color"
                android:textSize="12sp"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/game_method_info_padding"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="组三、组六、混合组选"
                android:textColor="@color/app_font_dark_color"
                android:textSize="14sp"
                android:typeface="serif" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/game_method_info_padding"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/dantiao_3d_item5"
                android:textColor="@color/app_font_dark_color"
                android:textSize="12sp"
                android:typeface="serif" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/game_method_info_padding"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="组选和值"
                android:textColor="@color/app_font_dark_color"
                android:textSize="14sp"
                android:typeface="serif" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/game_method_info_padding"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/dantiao_3d_item3"
                android:textColor="@color/app_font_dark_color"
                android:textSize="12sp"
                android:typeface="serif" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/game_method_info_padding"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="二星直选、单式、组选"
                android:textColor="@color/app_font_dark_color"
                android:textSize="14sp"
                android:typeface="serif" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/game_method_info_padding"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/dantiao_3d_item5"
                android:textColor="@color/app_font_dark_color"
                android:textSize="12sp"
                android:typeface="serif" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/game_method_info_padding"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="一星、不定位、龙虎和、猜不出"
                android:textColor="@color/app_font_dark_color"
                android:textSize="14sp"
                android:typeface="serif" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/game_method_info_padding"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/dantiao_3d_item5"
                android:textColor="@color/app_font_dark_color"
                android:textSize="12sp"
                android:typeface="serif" />
        </TableRow>


    </TableLayout>

</ScrollView>


