<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/plan_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout android:id="@+id/ratiolayout_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="50dp">

                <RadioButton
                    android:id="@+id/plan_ratio_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_button_style"
                    android:paddingRight="10dp" />

                <TextView
                    style="@style/text_styles"
                    android:text="全程利润率" />

                <EditText
                    android:id="@+id/plan_way_0"
                    style="@style/edittext_styles"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:minWidth="50dp"
                    android:text="10" />

                <TextView
                    style="@style/text_styles"
                    android:text="%" />
            </LinearLayout>

            <View
                style="@style/horizontal_divide_line"
                android:background="@color/text_shallow" />

            <LinearLayout android:id="@+id/ratiolayout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="50dp">

                <RadioButton
                    android:id="@+id/plan_ratio_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_button_style"
                    android:paddingRight="10dp" />

                <TextView
                    style="@style/text_styles"
                    android:text="前" />

                <EditText
                    android:id="@+id/plan_way_1_0"
                    style="@style/edittext_styles"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:minWidth="35dp"
                    android:text="5" />

                <TextView
                    style="@style/text_styles"
                    android:text="期利润率" />

                <EditText
                    android:id="@+id/plan_way_1_1"
                    style="@style/edittext_styles"
                    android:layout_width="35dp"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:text="10" />

                <TextView
                    style="@style/text_styles"
                    android:text="%之后利润率" />

                <EditText
                    android:id="@+id/plan_way_1_2"
                    style="@style/edittext_styles"
                    android:layout_width="35dp"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:minWidth="35dp"
                    android:text="5" />

                <TextView
                    style="@style/text_styles"
                    android:text="%" />
            </LinearLayout>

            <View
                style="@style/horizontal_divide_line"
                android:background="@color/text_shallow" />

            <LinearLayout android:id="@+id/ratiolayout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="50dp">

                <RadioButton
                    android:id="@+id/plan_ratio_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_button_style"
                    android:paddingRight="10dp" />

                <TextView
                    style="@style/text_styles"
                    android:text="全程累计利润率" />

                <EditText
                    android:id="@+id/plan_way_2"
                    style="@style/edittext_styles"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:minWidth="35dp"
                    android:text="100" />

                <TextView
                    style="@style/text_styles"
                    android:text="元" />
            </LinearLayout>

            <View
                style="@style/horizontal_divide_line"
                android:background="@color/text_shallow" />

            <LinearLayout android:id="@+id/ratiolayout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="50dp">

                    <RadioButton
                        android:id="@+id/plan_ratio_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_button_style"
                        android:paddingRight="10dp" />

                    <TextView
                        style="@style/text_styles"
                        android:text="前" />

                    <EditText
                        android:id="@+id/plan_way_3_0"
                        style="@style/edittext_styles"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:minWidth="40dp"
                        android:text="5" />

                    <TextView
                        style="@style/text_styles"
                        android:text="期累计利润" />

                    <EditText
                        android:id="@+id/plan_way_3_1"
                        style="@style/edittext_styles"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:minWidth="40dp"
                        android:text="100" />

                    <TextView
                        style="@style/text_styles"
                        android:text="元" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:minHeight="50dp">

                    <TextView
                        style="@style/text_styles"
                        android:text="之后累计利润" />

                    <EditText
                        android:id="@+id/plan_way_3_2"
                        style="@style/edittext_styles"
                        android:digits="1234567890"
                        android:inputType="number"
                        android:minWidth="40dp"
                        android:text="50" />

                    <TextView
                        style="@style/text_styles"
                        android:text="元" />

                </LinearLayout>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
</ScrollView>



