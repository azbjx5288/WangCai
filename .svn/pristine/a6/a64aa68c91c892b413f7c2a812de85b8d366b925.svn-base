<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/in_box_fragment"
        style="@style/tabUserItemLinearLayout">
        <ImageView
            android:id="@+id/in_box_text_img"
            android:src="@drawable/icon_inbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/in_box_text"
            android:layout_toRightOf="@+id/in_box_text_img"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="收件箱"/>

        <TextView
            android:id="@+id/in_box_badge"
            android:layout_toRightOf="@+id/in_box_text_img"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-6dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/tabUserItemTextArr"
            style="@style/tabUserItemImgArrow" />
    </RelativeLayout>

    <View style="@style/horizontal_divide_line" />


    <RelativeLayout
        android:id="@+id/out_box_fragment"
        style="@style/tabUserItemLinearLayout">
        <TextView
            style="@style/tabUserItemText"
            android:drawableLeft="@drawable/icon_outbox"
            android:text="发件箱"/>
        <ImageView style="@style/tabUserItemImgArrow" />
    </RelativeLayout>

    <View style="@style/horizontal_divide_line" />


    <RelativeLayout
        android:id="@+id/write_email_fragment"
        style="@style/tabUserItemLinearLayout">
        <TextView
            style="@style/tabUserItemText"
            android:drawableLeft="@drawable/icon_newmail"
            android:text="发信息"/>
        <ImageView style="@style/tabUserItemImgArrow" />
    </RelativeLayout>

    <View
        android:id="@+id/game_reports_view"
        style="@style/horizontal_divide_line" />

</LinearLayout>


