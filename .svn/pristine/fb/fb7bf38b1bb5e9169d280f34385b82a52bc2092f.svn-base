<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 填充的颜色 -->
    <solid android:color="@color/app_main" />

    <!-- 设置按钮的四个角为弧形 -->
    <corners android:radius="4dp" />
    <!-- padding: Button 里面的文字与Button边界的间隔 -->
    <padding
        android:bottom="8dp"
        android:left="10dp"
        android:right="10dp"
        android:top="8dp" />

</shape>