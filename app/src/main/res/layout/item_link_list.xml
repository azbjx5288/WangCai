<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:orientation="horizontal">
    <TextView android:id="@+id/channel"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@drawable/background_border"
              android:gravity="center"
              android:text="无"
              android:textColor="@color/app_font_ash_color"
              android:textSize="@dimen/text_size_tiny"/>
    <TextView android:id="@+id/user_amount"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@drawable/background_border"
              android:gravity="center"
              android:text="0"
              android:textColor="@color/app_font_ash_color"
              android:textSize="@dimen/text_size_tiny"/>
    <TextView android:id="@+id/date"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:background="@drawable/background_border"
              android:gravity="center"
              android:text="yyyy-mm-dd"
              android:textColor="@color/app_font_ash_color"
              android:textSize="@dimen/text_size_tiny"/>
    <LinearLayout android:layout_width="0dp"
                  android:padding="@dimen/pad_ud"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="@drawable/background_border"
                  android:gravity="center">
        <TextView android:id="@+id/detail"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:text="详情"
                  android:textColor="@color/app_main"
                  android:textSize="@dimen/text_size_tiny"/>
        <ImageView android:id="@+id/delete"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/selector_edittext_delete"/>
    </LinearLayout>
</LinearLayout>