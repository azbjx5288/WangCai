<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/historyother"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <TextView
        android:id="@+id/lottery_historyother_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="xxxxxxxx-xxx"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/lottery_historyother_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="x x x x x"
        android:textColor="@android:color/holo_red_light" />

    <LinearLayout
        android:id="@+id/kuaisanItemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kuaisanSum"
            android:layout_width="27dip"
            android:layout_height="27dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="26dp"
            android:background="@drawable/kuaisan_txet_bg1"
            android:gravity="center"
            android:text="13"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/kuaisanSize"
            android:layout_width="27dip"
            android:layout_height="27dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/kuaisan_txet_bg2"
            android:gravity="center"
            android:text="大"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/kuaisanOdd"
            android:layout_width="27dip"
            android:layout_height="27dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/kuaisan_txet_bg3"
            android:gravity="center"
            android:text="双"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>