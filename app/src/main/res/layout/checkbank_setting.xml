<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pick_verify"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="@color/background"
        android:gravity="center"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pick_verify">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/background"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="开户人名"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/real_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入银行卡对应的姓名"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/text_middle"
                    android:textSize="16sp" />
            </LinearLayout>

            <View style="@style/divideLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/background"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="银行卡号"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/card_no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:digits="1234567890"
                    android:gravity="center_vertical"
                    android:hint="请输入您选择的完整银行卡号"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/text_middle"
                    android:textSize="16sp" />
            </LinearLayout>

            <View style="@style/divideLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/background"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="资金密码"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/funds_pswd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:gravity="center_vertical"
                    android:hint="请输入您的资金密码"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/text_middle"
                    android:textSize="16sp" />
            </LinearLayout>

            <View style="@style/divideLine" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:padding="5dp">

        <Button
            android:id="@+id/submit_censor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_type"
            android:text="确认" />

    </LinearLayout>
</RelativeLayout>
