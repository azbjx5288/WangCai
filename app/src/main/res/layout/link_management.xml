<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="@dimen/pad_ud"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="链接数"
                android:textColor="@color/app_font_color"
                android:textSize="@dimen/text_size_main" />

            <TextView
                android:id="@+id/link_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0条"
                android:textColor="@color/app_font_ash_color"
                android:textSize="@dimen/text_size_tiny" />
        </LinearLayout>

        <View style="@style/vertical_divide_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="总注册人数"
                android:textColor="@color/app_font_color"
                android:textSize="@dimen/text_size_main" />

            <TextView
                android:id="@+id/user_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0人"
                android:textColor="@color/app_font_ash_color"
                android:textSize="@dimen/text_size_tiny" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_border"
            android:gravity="center"
            android:text="推广渠道"
            android:textColor="@color/app_font_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_border"
            android:gravity="center"
            android:text="注册人数"
            android:textColor="@color/app_font_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_border"
            android:gravity="center"
            android:text="生效时间"
            android:textColor="@color/app_font_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_border"
            android:gravity="center"
            android:text="操作"
            android:textColor="@color/app_font_color"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/link_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>